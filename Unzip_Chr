chromosome_nb = list(range(1,23))
rule all: 
	input: expand("/mnt/mydatalocal/chromosome/Chr{sample}/Homo_sapiens.GRCh38.dna.chromosome.{sample}.fa", sample=chromosome_nb)

rule unzip_chr:
	input: "/mnt/mydatalocal/chromosome/Chr{sample}/Homo_sapiens.GRCh38.dna.chromosome.{sample}.fa.gz"
	output: "/mnt/mydatalocal/chromosome/Chr{sample}/Homo_sapiens.GRCh38.dna.chromosome.{sample}.fa"
        shell:
                """
			gunzip -c {input} > {output}
                """
